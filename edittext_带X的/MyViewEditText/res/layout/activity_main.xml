<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.myviewedittext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="当前输入文字数量:"
        android:textSize="22sp" />

    <com.example.myviewedittext.EditTextWithClearBtn
        android:id="@+id/etc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_et_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:hint="请输入您的手机号"
        app:textLeft="手机号:"
        app:text_size="8sp" >
    </com.example.myviewedittext.EditTextWithClearBtn>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.example.myviewedittext.EditTextWithClearBtn
            android:id="@+id/etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:addStatesFromChildren="true"
            android:background="@drawable/bg_et_selector"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:hint="请输入您的手机号"
            app:text="222222222222"
            app:textLeft="手机号:"
            >
        </com.example.myviewedittext.EditTextWithClearBtn>

        <com.example.myviewedittext.EditTextWithClearBtn
            android:id="@+id/etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:addStatesFromChildren="true"
            android:background="@drawable/bg_et_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:hint="请输入您的手机号"
            app:text="33333333333333"
            app:textLeft="手机号:"
             >
        </com.example.myviewedittext.EditTextWithClearBtn>
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="get text" />

</LinearLayout>