<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="?colorPrimary" >

        <com.dazhongcun.widget.WPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/edit_info_title"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/trans"
            android:clickable="true"
            android:drawableLeft="@drawable/back_seletor"
            android:paddingLeft="8dip"
            android:paddingRight="24dip"
            android:text="@string/back"
            android:textColor="@drawable/text_blue"
            android:textSize="@dimen/text_size_sixteen" />
        
        <TextView
            android:id="@+id/edit_or_add"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/trans"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="保存"
            android:textColor="@drawable/text_blue"
            android:textSize="@dimen/text_size_sixteen" />
        <!--  -->
    </RelativeLayout>

    
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

     
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dip"
        android:layout_marginTop="4dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeManHint"
                style="@style/leftEditLayout"
                android:text="头像"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <ImageView
                android:id="@+id/makeImage"
                style="@style/rightLayout"
                android:layout_width="54dip"
                android:layout_height="60dip"
               />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeTypeHint"
                style="@style/leftEditLayout"
                android:text="性别"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeType"
                style="@style/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makePhoneHint"
                style="@style/leftEditLayout"
                android:text="昵称"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makename"
                style="@style/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeNameHint"
                style="@style/leftEditLayout"
                android:text="城市"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeName"
                style="@style/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeTimeHint"
                style="@style/leftEditLayout"
                android:text="出生日期"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeTime"
                style="@style/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="48dip"
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makedateHint"
                style="@style/leftEditLayout"
                android:text="职位"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makeposition"
                style="@style/rightLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dip"
        android:layout_marginTop="14dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            
            android:layout_weight="2.5" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makesignhint"
                style="@style/leftEditLayout"
                android:text="自我简介"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="left" >

            <com.dazhongcun.widget.WPTextView
                android:id="@+id/makesign"
                style="@style/rightLayout"
                android:layout_marginRight="12dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="#9B9EA2"
                app:fontVariation="light" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>